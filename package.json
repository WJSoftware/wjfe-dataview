{
	"name": "@wjfe/dataview",
	"version": "0.4.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"deploy": "npm run build && gh-pages -b Pages -d build -t true",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0-next.175"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.2",
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"gh-pages": "^6.1.1",
		"publint": "^0.2.8",
		"sass": "^1.77.1",
		"svelte-check": "^3.8.4",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.3.3",
		"vitest": "^1.2.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/WJSoftware/wjfe-dataview.git"
	},
	"keywords": [
		"svelte",
		"table",
		"data",
		"dataview",
		"grid",
		"gridview",
		"datagrid"
	],
	"author": "José Pablo Ramírez Vargas",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/WJSoftware/wjfe-dataview/issues"
	},
	"homepage": "https://wj-dataview.vercel.app",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
